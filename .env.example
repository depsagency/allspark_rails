# Rails Configuration
RAILS_ENV=development
RAILS_MASTER_KEY=

# Application Configuration
APP_NAME=AllSparkRails
APP_URL=http://localhost:3000
APP_HOST=localhost:3000

# Docker Compose Configuration (optional)
COMPOSE_PROJECT_NAME=allspark_rails

# Database Configuration
# For Docker setup:
DATABASE_URL=postgresql://postgres:password@db:5432/allspark_rails_development

# For local setup without Docker:
# DATABASE_USERNAME=your_username
# DATABASE_PASSWORD=your_password  
# DATABASE_HOST=localhost

# Redis Configuration (for Sidekiq, ActionCable, Cache)
# For Docker setup:
REDIS_URL=redis://redis:6379/0
SIDEKIQ_REDIS_URL=redis://redis:6379/1

# For local setup:
# REDIS_URL=redis://localhost:6379/0
# SIDEKIQ_REDIS_URL=redis://localhost:6379/1

# Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
MAIL_FROM=noreply@example.com

# AI/LLM Configuration
# === OPTION 1: OpenRouter (RECOMMENDED - Easiest Setup) ===
# Single API key for access to 100+ models from all providers
# Sign up at: https://openrouter.ai/
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=google/gemini-2.0-flash-exp

# === OPTION 2: Direct Provider Access (Advanced) ===
# Uncomment and configure if you prefer direct API access
# LLM_PROVIDER=openai # Options: openai, claude, gemini
# OPENAI_API_KEY=your_openai_key_here
# CLAUDE_API_KEY=your_claude_key_here
# GEMINI_API_KEY=your_gemini_key_here
# OPENAI_MODEL=gpt-4o-mini
# CLAUDE_MODEL=claude-3-5-sonnet-20241022
# GEMINI_MODEL=gemini-2.0-flash-exp

# Optional LLM Settings
LLM_FALLBACK_PROVIDERS= # Comma-separated list: openai,claude,gemini
LLM_CACHE_ENABLED=true
LLM_MAX_RETRIES=3
LLM_TIMEOUT=30

# External Services (Optional)
STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=

# Google Search API (for AI Assistant web search tool)
# Get your API key from: https://developers.google.com/custom-search/v1/overview
# Create a Custom Search Engine at: https://programmablesearchengine.google.com/
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# File Storage (AWS S3 or similar) - Optional
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_BUCKET=

# Monitoring & Analytics (Optional)
SENTRY_DSN=
GOOGLE_ANALYTICS_ID=

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
MAINTENANCE_MODE=false

# Security
FORCE_SSL=false
# Generate with: rails secret
SECRET_KEY_BASE=use_rails_secret_to_generate

# Development Tools
DEBUG=false
BULLET_ENABLED=false

# MCP Bridge Configuration (Optional)
MCP_BRIDGE_ENABLED=true
MCP_BRIDGE_MAX_PROCESSES=10
MCP_BRIDGE_PROCESS_TIMEOUT=30
MCP_BRIDGE_HEALTH_CHECK_INTERVAL=30
MCP_BRIDGE_PROCESS_IDLE_TIMEOUT=300
MCP_BRIDGE_LOG_LEVEL=info