<div class="container mx-auto px-4 py-8">
  <!-- Flash messages -->
  <% flash.each do |type, message| %>
    <div class="alert <%= type == 'notice' ? 'alert-success' : 'alert-error' %> mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
      <span><%= message %></span>
    </div>
  <% end %>

  <!-- User Profile Card -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <!-- Header with avatar and basic info -->
      <div class="flex flex-col sm:flex-row items-start sm:items-center gap-6 mb-6">
        <!-- Avatar -->
        <div class="avatar">
          <div class="w-24 h-24 rounded-full">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar, alt: @user.display_name, class: "w-full h-full object-cover" %>
            <% else %>
              <div class="bg-primary text-primary-content flex items-center justify-center w-full h-full text-2xl font-bold">
                <%= @user.initials %>
              </div>
            <% end %>
          </div>
        </div>

        <!-- User info and actions -->
        <div class="flex-1">
          <h1 class="text-3xl font-bold mb-2"><%= @user.display_name %></h1>
          <p class="text-base-content/70 mb-4"><%= @user.email %></p>
          
          <div class="flex gap-2">
            <% if @user == current_user || current_user&.admin? %>
              <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
              <%= link_to mcp_servers_user_path(@user), class: "btn btn-secondary" do %>
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01"></path>
                </svg>
                MCP Servers
              <% end %>
            <% end %>
            
            <% if current_user&.can_impersonate?(@user) && !impersonating? %>
              <%= form_with url: start_admin_impersonation_index_path, method: :post, local: true, class: "inline" do |form| %>
                <%= form.hidden_field :user_id, value: @user.id %>
                <%= form.submit "Impersonate", 
                    class: "btn btn-warning",
                    data: { 
                      confirm: "Are you sure you want to impersonate #{@user.display_name}? This action will be logged.",
                      turbo_confirm: "Are you sure you want to impersonate #{@user.display_name}? This action will be logged."
                    } %>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Profile Information -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Personal Information -->
        <div>
          <h2 class="text-xl font-semibold mb-4">Personal Information</h2>
          <div class="space-y-3">
            <% if @user.first_name.present? || @user.last_name.present? %>
              <div>
                <span class="font-medium text-base-content/70">Full Name:</span>
                <span class="ml-2"><%= @user.full_name %></span>
              </div>
            <% end %>
            
            <div>
              <span class="font-medium text-base-content/70">Email:</span>
              <span class="ml-2"><%= @user.email %></span>
            </div>
            
            <div>
              <span class="font-medium text-base-content/70">Member since:</span>
              <span class="ml-2"><%= @user.created_at.strftime("%B %Y") %></span>
            </div>
          </div>
        </div>

        <!-- Bio and Links -->
        <div>
          <% if @user.bio.present? %>
            <h2 class="text-xl font-semibold mb-4">About</h2>
            <p class="text-base-content/80 mb-6 whitespace-pre-line"><%= @user.bio %></p>
          <% end %>

          <!-- Website and Social Links -->
          <% if @user.website.present? || @user.has_social_links? %>
            <h3 class="text-lg font-semibold mb-3">Links</h3>
            <div class="space-y-2">
              <% if @user.website.present? %>
                <div class="flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-base-content/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                  </svg>
                  <%= link_to @user.website, @user.website, target: "_blank", rel: "noopener", class: "link link-primary" %>
                </div>
              <% end %>

              <% User::SOCIAL_PLATFORMS.each do |platform, config| %>
                <% handle = @user.send("#{platform}_handle") %>
                <% if handle.present? %>
                  <div class="flex items-center gap-2">
                    <% case platform %>
                    <% when :twitter %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-base-content/60" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                      </svg>
                    <% when :github %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-base-content/60" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                      </svg>
                    <% when :linkedin %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-base-content/60" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                      </svg>
                    <% else %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-base-content/60" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1" />
                      </svg>
                    <% end %>
                    <% display_text = config[:type] == :username ? "@#{handle}" : platform.to_s.capitalize %>
                    <%= link_to display_text, @user.send("#{platform}_url"), 
                        target: "_blank", 
                        rel: "noopener", 
                        class: "link link-primary" %>
                  </div>
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>

        <!-- Theme Selector (only for current user) -->
        <% if @user == current_user %>
          <div class="mt-8">
            <h3 class="text-lg font-semibold mb-3">Theme Preferences</h3>
            <div class="card bg-base-200">
              <div class="card-body p-4">
                <div title="Change Theme" class="dropdown dropdown-end">
                  <div tabindex="0" class="btn btn-outline btn-sm normal-case">
                    <%= icon :swatch %>
                    <span class="ml-2">Change Theme</span>
                    <%= icon :chevron_down, class: 'w-4 h-4 ml-1' %>
                  </div>
                  <div class="mt-2 overflow-y-auto shadow-2xl dropdown-content h-96 w-52 z-[1] rounded-box bg-base-100 text-base-content border">
                    <ul class="p-4 menu compact" data-controller="theme">
                      <% themes.each do |theme| %>
                        <li><a tabindex="0" data-action="click->theme#switch" data-theme-value="<%= theme %>"><%= theme.humanize %></a></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
                <p class="text-sm text-base-content/70 mt-2">Choose your preferred color theme for the application.</p>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Empty state for missing profile info -->
      <% if @user.bio.blank? && @user.website.blank? && !@user.has_social_links? && (@user == current_user || current_user&.admin?) %>
        <div class="text-center py-8 mt-6 border-t border-base-200">
          <div class="text-4xl mb-4">📝</div>
          <h3 class="text-lg font-semibold mb-2">Complete your profile</h3>
          <p class="text-base-content/70 mb-4">Add a bio, website, and social links to help others learn more about you.</p>
          <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>