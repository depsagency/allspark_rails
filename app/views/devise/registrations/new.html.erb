<div class="min-h-screen flex items-center justify-center p-4">
  <div class="max-w-md w-full space-y-8">
    <div class="text-center">
      <h2 class="mt-6 text-3xl font-extrabold text-gray-900">
        Create your account
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Join us today! Please fill in your details to get started.
      </p>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), 
                           html: { class: "space-y-6", data: { turbo: false } }) do |f| %>
          
          <% if resource.errors.any? %>
            <div class="alert alert-error">
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
              <div>
                <h3 class="font-bold">Please fix the following errors:</h3>
                <ul class="list-disc list-inside mt-2">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          <% end %>
          
          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">First Name</span>
            </label>
            <%= f.text_field :first_name,
                            required: false,
                            autofocus: true,
                            class: "input input-bordered w-full",
                            placeholder: "Enter your first name" %>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Last Name</span>
            </label>
            <%= f.text_field :last_name,
                            required: false,
                            class: "input input-bordered w-full",
                            placeholder: "Enter your last name" %>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Email address</span>
            </label>
            <%= f.email_field :email,
                              required: true,
                              autocomplete: "email", 
                              class: "input input-bordered w-full",
                              placeholder: "Enter your email" %>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Password</span>
            </label>
            <%= f.password_field :password,
                                required: true,
                                autocomplete: "new-password",
                                class: "input input-bordered w-full",
                                placeholder: "Create a password" %>
            <% if @minimum_password_length %>
              <label class="label">
                <span class="label-text-alt"><%= @minimum_password_length %> characters minimum</span>
              </label>
            <% end %>
          </div>

          <div class="form-control">
            <label class="label">
              <span class="label-text font-medium">Confirm Password</span>
            </label>
            <%= f.password_field :password_confirmation,
                                required: true,
                                autocomplete: "new-password",
                                class: "input input-bordered w-full",
                                placeholder: "Confirm your password" %>
          </div>

          <div class="form-control">
            <%= f.button :submit, "Create Account", 
                         class: "btn btn-primary w-full", 
                         data: { disable_with: "Creating account..." } %>
          </div>
        <% end %>

        <div class="divider text-gray-400">or</div>
        
        <div class="text-center space-y-2">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>

    <div class="text-center">
      <p class="text-xs text-gray-500">
        By creating an account, you agree to our 
        <a href="#" class="link link-primary">Terms of Service</a> and 
        <a href="#" class="link link-primary">Privacy Policy</a>
      </p>
    </div>
  </div>
</div>
