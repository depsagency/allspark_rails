<div class="min-h-[600px] bg-base-100 rounded-lg shadow-xl p-4">
  <!-- Header -->
  <div class="flex justify-between items-center mb-4 pb-4 border-b border-base-300">
    <div>
      <h2 class="text-xl font-bold">Regular Chat Thread</h2>
      <p class="text-sm text-base-content/70">2 participants</p>
    </div>
    
    <div class="flex items-center gap-2">
      <button class="btn btn-primary btn-sm">Enable AI Assistant</button>
    </div>
  </div>

  <!-- Messages -->
  <div class="h-[400px] overflow-y-auto mb-4 space-y-3">
    <div class="chat chat-start">
      <div class="chat-image avatar">
        <div class="w-10 rounded-full bg-base-300 flex items-center justify-center">
          <span class="text-lg font-semibold">J</span>
        </div>
      </div>
      <div class="chat-header">
        John
        <time class="text-xs opacity-50">09:00</time>
      </div>
      <div class="chat-bubble">Hey, how's the project going?</div>
    </div>

    <div class="chat chat-end">
      <div class="chat-image avatar">
        <div class="w-10 rounded-full bg-base-300 flex items-center justify-center">
          <span class="text-lg font-semibold">S</span>
        </div>
      </div>
      <div class="chat-header">
        Sarah
        <time class="text-xs opacity-50">09:05</time>
      </div>
      <div class="chat-bubble chat-bubble-primary">
        Pretty good! Just finished implementing the new feature. Want to review it?
      </div>
    </div>

    <div class="chat chat-start">
      <div class="chat-image avatar">
        <div class="w-10 rounded-full bg-base-300 flex items-center justify-center">
          <span class="text-lg font-semibold">J</span>
        </div>
      </div>
      <div class="chat-header">
        John
        <time class="text-xs opacity-50">09:07</time>
      </div>
      <div class="chat-bubble">Sure! Can you share the PR link?</div>
    </div>

    <div class="chat chat-end">
      <div class="chat-image avatar">
        <div class="w-10 rounded-full bg-base-300 flex items-center justify-center">
          <span class="text-lg font-semibold">S</span>
        </div>
      </div>
      <div class="chat-header">
        Sarah
        <time class="text-xs opacity-50">09:08</time>
      </div>
      <div class="chat-bubble chat-bubble-primary">
        Here it is: github.com/company/repo/pull/123
      </div>
    </div>
  </div>

  <!-- Input -->
  <div class="flex gap-2">
    <input type="text" placeholder="Type your message..." class="input input-bordered flex-1" />
    <button class="btn btn-primary">Send</button>
  </div>

  <!-- Info -->
  <div class="mt-4 text-sm text-base-content/70">
    <p>This is a regular chat thread without AI Assistant. Click "Enable AI Assistant" to add AI capabilities to this thread.</p>
  </div>
</div>