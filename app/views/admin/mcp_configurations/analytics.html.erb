<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold">MCP Analytics Dashboard</h1>
      <p class="text-base-content/70 mt-2">
        System-wide analytics and monitoring for MCP configurations
      </p>
    </div>
    
    <div class="flex gap-2">
      <%= link_to "← Back to Configurations", admin_mcp_configurations_path, class: "btn btn-ghost" %>
      
      <!-- Timeframe Selector -->
      <div class="dropdown dropdown-end">
        <div tabindex="0" role="button" class="btn btn-outline">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <%= params[:timeframe]&.humanize || 'Last 7 Days' %>
        </div>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52">
          <li><%= link_to "Last 24 Hours", analytics_admin_mcp_configurations_path(timeframe: 'last_24_hours') %></li>
          <li><%= link_to "Last 7 Days", analytics_admin_mcp_configurations_path(timeframe: 'last_7_days') %></li>
          <li><%= link_to "Last 30 Days", analytics_admin_mcp_configurations_path(timeframe: 'last_30_days') %></li>
          <li><%= link_to "Last 90 Days", analytics_admin_mcp_configurations_path(timeframe: 'last_90_days') %></li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Overview Stats -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <div class="stats shadow">
      <div class="stat">
        <div class="stat-figure text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h6l2 2h6a2 2 0 012 2v4a2 2 0 01-2 2H5z" />
          </svg>
        </div>
        <div class="stat-title">Total Configurations</div>
        <div class="stat-value"><%= @analytics[:overview][:total_configurations] %></div>
        <div class="stat-desc">
          <%= @analytics[:overview][:active_configurations] %> active
        </div>
      </div>
    </div>

    <div class="stats shadow">
      <div class="stat">
        <div class="stat-figure text-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
          </svg>
        </div>
        <div class="stat-title">Total Executions</div>
        <div class="stat-value"><%= number_with_delimiter(@analytics[:overview][:total_executions]) %></div>
        <div class="stat-desc">
          <%= @analytics[:overview][:success_rate] %>% success rate
        </div>
      </div>
    </div>

    <div class="stats shadow">
      <div class="stat">
        <div class="stat-figure text-accent">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="stat-title">Avg Response Time</div>
        <div class="stat-value text-lg"><%= @analytics[:overview][:avg_response_time] %>ms</div>
        <div class="stat-desc">
          P95: <%= @analytics[:overview][:p95_response_time] %>ms
        </div>
      </div>
    </div>

    <div class="stats shadow">
      <div class="stat">
        <div class="stat-figure text-info">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <div class="stat-title">Available Tools</div>
        <div class="stat-value"><%= @analytics[:overview][:total_tools] %></div>
        <div class="stat-desc">
          Most used: <%= @analytics[:overview][:most_used_tool] %>
        </div>
      </div>
    </div>
  </div>

  <!-- Health Status -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-8">
    <!-- System Health -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">System Health</h2>
        
        <div class="space-y-4">
          <div class="flex justify-between items-center">
            <span class="flex items-center gap-2">
              <div class="w-3 h-3 bg-success rounded-full"></div>
              Healthy
            </span>
            <span class="font-semibold"><%= @analytics[:health][:healthy] %></span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="flex items-center gap-2">
              <div class="w-3 h-3 bg-warning rounded-full"></div>
              Warning
            </span>
            <span class="font-semibold"><%= @analytics[:health][:warning] %></span>
          </div>
          
          <div class="flex justify-between items-center">
            <span class="flex items-center gap-2">
              <div class="w-3 h-3 bg-error rounded-full"></div>
              Critical
            </span>
            <span class="font-semibold"><%= @analytics[:health][:critical] %></span>
          </div>
        </div>
      </div>
    </div>

    <!-- Usage Trends Chart -->
    <div class="card bg-base-100 shadow-xl lg:col-span-2">
      <div class="card-body">
        <h2 class="card-title">Usage Trends</h2>
        
        <div class="h-64 flex items-center justify-center">
          <canvas id="usageTrendsChart" width="400" height="200"></canvas>
        </div>
      </div>
    </div>
  </div>

  <!-- Response Time Distribution & Top Configurations -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Response Time Distribution -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Response Time Distribution</h2>
        
        <div class="h-64 flex items-center justify-center">
          <canvas id="responseTimeChart" width="300" height="200"></canvas>
        </div>
      </div>
    </div>

    <!-- Top Performing Configurations -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Top Performing Configurations</h2>
        
        <% if @analytics[:top_configurations].any? %>
          <div class="space-y-3">
            <% @analytics[:top_configurations].each_with_index do |config, index| %>
              <div class="flex items-center justify-between p-3 bg-base-200 rounded-lg">
                <div>
                  <div class="font-semibold text-sm">
                    #<%= index + 1 %> <%= config[:name] %>
                  </div>
                  <div class="text-xs opacity-70">
                    <%= config[:server_type].capitalize %> • <%= config[:executions] %> executions
                  </div>
                </div>
                <div class="text-right">
                  <div class="badge badge-<%= config[:success_rate] > 95 ? 'success' : config[:success_rate] > 80 ? 'warning' : 'error' %> badge-sm">
                    <%= config[:success_rate] %>%
                  </div>
                  <div class="text-xs opacity-70">
                    <%= config[:avg_response_time] %>ms avg
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-center py-8 opacity-70">No configuration data available</p>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Popular Tools & Unhealthy Configurations -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-8">
    <!-- Most Popular Tools -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Most Popular Tools</h2>
        
        <% if @analytics[:popular_tools].any? %>
          <div class="space-y-2">
            <% @analytics[:popular_tools].each_with_index do |tool, index| %>
              <div class="flex items-center justify-between p-2 hover:bg-base-200 rounded">
                <div>
                  <div class="font-medium text-sm"><%= tool[:name] %></div>
                  <div class="text-xs opacity-70">via <%= tool[:configuration_name] %></div>
                </div>
                <div class="badge badge-neutral">
                  <%= number_with_delimiter(tool[:usage_count]) %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <p class="text-center py-8 opacity-70">No tool usage data available</p>
        <% end %>
      </div>
    </div>

    <!-- Unhealthy Configurations -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title">Unhealthy Configurations</h2>
        
        <% if @analytics[:unhealthy_configurations].any? %>
          <div class="space-y-3">
            <% @analytics[:unhealthy_configurations].each do |config| %>
              <div class="alert alert-<%= config[:status] == 'error' ? 'error' : 'warning' %> py-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-4 w-4" fill="none" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
                </svg>
                <div>
                  <div class="font-semibold text-xs"><%= config[:name] %></div>
                  <div class="text-xs"><%= config[:issue] %></div>
                </div>
                <%= link_to admin_mcp_configuration_path(config[:id]), class: "btn btn-ghost btn-xs" do %>
                  View
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="alert alert-success">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span>All configurations are healthy!</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title">Recent Activity</h2>
      
      <% if @analytics[:recent_activity].any? %>
        <div class="overflow-x-auto">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>Time</th>
                <th>Configuration</th>
                <th>Tool</th>
                <th>User</th>
                <th>Status</th>
                <th>Response Time</th>
              </tr>
            </thead>
            <tbody>
              <% @analytics[:recent_activity].each do |activity| %>
                <tr>
                  <td class="text-xs">
                    <%= time_ago_in_words(activity[:timestamp]) %> ago
                  </td>
                  <td class="text-xs font-medium">
                    <%= activity[:configuration_name] %>
                  </td>
                  <td class="text-xs">
                    <%= activity[:tool_name] %>
                  </td>
                  <td class="text-xs">
                    <%= activity[:user_email] %>
                  </td>
                  <td>
                    <div class="badge badge-<%= activity[:status] == 'success' ? 'success' : 'error' %> badge-xs">
                      <%= activity[:status] %>
                    </div>
                  </td>
                  <td class="text-xs">
                    <%= activity[:response_time] %>ms
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-center py-8 opacity-70">No recent activity</p>
      <% end %>
    </div>
  </div>
</div>

<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Usage Trends Chart
  const usageCtx = document.getElementById('usageTrendsChart').getContext('2d');
  new Chart(usageCtx, {
    type: 'line',
    data: {
      labels: <%= @analytics[:usage_trends][:labels].to_json.html_safe %>,
      datasets: [{
        label: 'Successful',
        data: <%= @analytics[:usage_trends][:successful].to_json.html_safe %>,
        borderColor: 'rgb(34, 197, 94)',
        backgroundColor: 'rgba(34, 197, 94, 0.1)',
        tension: 0.1
      }, {
        label: 'Failed',
        data: <%= @analytics[:usage_trends][:failed].to_json.html_safe %>,
        borderColor: 'rgb(239, 68, 68)',
        backgroundColor: 'rgba(239, 68, 68, 0.1)',
        tension: 0.1
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false,
      scales: {
        y: {
          beginAtZero: true
        }
      }
    }
  });

  // Response Time Distribution Chart
  const responseCtx = document.getElementById('responseTimeChart').getContext('2d');
  new Chart(responseCtx, {
    type: 'doughnut',
    data: {
      labels: <%= @analytics[:response_time_distribution][:labels].to_json.html_safe %>,
      datasets: [{
        data: <%= @analytics[:response_time_distribution][:data].to_json.html_safe %>,
        backgroundColor: [
          'rgb(34, 197, 94)',
          'rgb(59, 130, 246)',
          'rgb(245, 158, 11)',
          'rgb(239, 68, 68)',
          'rgb(107, 114, 128)'
        ]
      }]
    },
    options: {
      responsive: true,
      maintainAspectRatio: false
    }
  });
});
</script>