<% content_for :title, "#{@mcp_server.name} - Monitoring & Analytics" %>

<div class="container mx-auto px-4 py-6">
  <!-- Header Section -->
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between mb-6">
    <div>
      <div class="breadcrumbs text-sm mb-2">
        <ul>
          <li><%= link_to "Admin", "#", class: "text-primary" %></li>
          <li><%= link_to "MCP Servers", admin_mcp_servers_path, class: "text-primary" %></li>
          <li><%= link_to @mcp_server.name, admin_mcp_server_path(@mcp_server), class: "text-primary" %></li>
          <li>Monitoring</li>
        </ul>
      </div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Server Analytics</h1>
      <p class="text-gray-600">Monitoring and usage statistics for <%= @mcp_server.name %></p>
    </div>
    
    <div class="mt-4 lg:mt-0 flex gap-2">
      <%= link_to admin_mcp_server_path(@mcp_server), 
          class: "btn btn-ghost" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
        Back to Server
      <% end %>
      
      <button class="btn btn-primary" onclick="window.print()">
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
        </svg>
        Export Report
      </button>
    </div>
  </div>

  <!-- Quick Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <div class="stats shadow">
      <div class="stat">
        <div class="stat-figure text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
          </svg>
        </div>
        <div class="stat-title">Total Executions</div>
        <div class="stat-value text-primary"><%= @usage_stats[:total_executions] %></div>
        <div class="stat-desc">Last 30 days</div>
      </div>
    </div>
    
    <div class="stats shadow">
      <div class="stat">
        <div class="stat-figure text-success">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <div class="stat-title">Success Rate</div>
        <div class="stat-value text-success">
          <% success_rate = @usage_stats[:total_executions] > 0 ? (@usage_stats[:successful_executions].to_f / @usage_stats[:total_executions] * 100).round(1) : 0 %>
          <%= success_rate %>%
        </div>
        <div class="stat-desc"><%= @usage_stats[:successful_executions] %> / <%= @usage_stats[:total_executions] %> successful</div>
      </div>
    </div>
    
    <div class="stats shadow">
      <div class="stat">
        <div class="stat-figure text-info">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <div class="stat-title">Avg Response Time</div>
        <div class="stat-value text-info">
          <%= @usage_stats[:avg_response_time] || 0 %>ms
        </div>
        <div class="stat-desc">
          <%= @performance_stats[:p95_response_time] %>ms 95th percentile
        </div>
      </div>
    </div>
    
    <div class="stats shadow">
      <div class="stat">
        <div class="stat-figure text-error">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
        </div>
        <div class="stat-title">Error Rate</div>
        <div class="stat-value text-error"><%= @error_stats[:error_rate] %>%</div>
        <div class="stat-desc"><%= @error_stats[:total_errors] %> total errors</div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Usage Trends -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
          Daily Usage (Last 7 Days)
        </h2>
        
        <div class="h-64 flex items-end justify-between gap-2">
          <% @usage_stats[:daily_usage].each do |date, count| %>
            <div class="flex flex-col items-center flex-1">
              <div class="bg-primary rounded-t" 
                   style="height: <%= count > 0 ? [count.to_f / @usage_stats[:daily_usage].values.max * 200, 10].max : 10 %>px; width: 100%;">
              </div>
              <div class="text-xs mt-2 text-center">
                <%= Date.parse(date).strftime('%m/%d') %>
              </div>
              <div class="text-xs font-bold">
                <%= count %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Error Trends -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
          </svg>
          Error Trends (Last 7 Days)
        </h2>
        
        <div class="h-64 flex items-end justify-between gap-2">
          <% max_errors = [@error_stats[:error_trends].values.max, 1].max %>
          <% @error_stats[:error_trends].each do |date, count| %>
            <div class="flex flex-col items-center flex-1">
              <div class="bg-error rounded-t" 
                   style="height: <%= count > 0 ? [count.to_f / max_errors * 200, 10].max : 10 %>px; width: 100%;">
              </div>
              <div class="text-xs mt-2 text-center">
                <%= Date.parse(date).strftime('%m/%d') %>
              </div>
              <div class="text-xs font-bold">
                <%= count %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Most Used Tools -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Most Popular Tools
        </h2>
        
        <% if @usage_stats[:most_used_tools].any? %>
          <div class="space-y-3">
            <% @usage_stats[:most_used_tools].each_with_index do |(tool_name, count), index| %>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="badge badge-outline badge-sm">
                    #<%= index + 1 %>
                  </div>
                  <span class="font-mono text-sm"><%= tool_name %></span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="badge badge-neutral"><%= count %> uses</div>
                  <div class="w-20 bg-base-200 rounded-full h-2">
                    <div class="bg-primary h-2 rounded-full" 
                         style="width: <%= (count.to_f / @usage_stats[:most_used_tools].first[1] * 100).round(1) %>%">
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-gray-500">No tool usage data available</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Top Users -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
          </svg>
          Top Users
        </h2>
        
        <% if @usage_stats[:top_users].any? %>
          <div class="space-y-3">
            <% @usage_stats[:top_users].each_with_index do |(user_email, count), index| %>
              <div class="flex items-center justify-between">
                <div class="flex items-center gap-3">
                  <div class="badge badge-outline badge-sm">
                    #<%= index + 1 %>
                  </div>
                  <span class="text-sm"><%= user_email %></span>
                </div>
                <div class="flex items-center gap-2">
                  <div class="badge badge-info"><%= count %> calls</div>
                  <div class="w-20 bg-base-200 rounded-full h-2">
                    <div class="bg-info h-2 rounded-full" 
                         style="width: <%= (count.to_f / @usage_stats[:top_users].first[1] * 100).round(1) %>%">
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-gray-500">No user activity data available</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Performance Metrics -->
    <div class="card bg-base-100 shadow-xl lg:col-span-2">
      <div class="card-body">
        <h2 class="card-title mb-4">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Performance Metrics
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
          <div class="stat">
            <div class="stat-title">Average</div>
            <div class="stat-value text-sm"><%= @performance_stats[:avg_response_time].round(1) %>ms</div>
          </div>
          
          <div class="stat">
            <div class="stat-title">Median</div>
            <div class="stat-value text-sm"><%= @performance_stats[:median_response_time] %>ms</div>
          </div>
          
          <div class="stat">
            <div class="stat-title">95th Percentile</div>
            <div class="stat-value text-sm"><%= @performance_stats[:p95_response_time] %>ms</div>
          </div>
          
          <div class="stat">
            <div class="stat-title">Fastest</div>
            <div class="stat-value text-sm text-success"><%= @performance_stats[:min_response_time] %>ms</div>
          </div>
          
          <div class="stat">
            <div class="stat-title">Slowest</div>
            <div class="stat-value text-sm text-warning"><%= @performance_stats[:max_response_time] %>ms</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Common Errors -->
    <% if @error_stats[:common_errors].any? %>
      <div class="card bg-base-100 shadow-xl lg:col-span-2">
        <div class="card-body">
          <h2 class="card-title mb-4">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Common Errors
          </h2>
          
          <div class="overflow-x-auto">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Error Message</th>
                  <th>Occurrences</th>
                  <th>Percentage</th>
                </tr>
              </thead>
              <tbody>
                <% total_errors = @error_stats[:common_errors].values.sum %>
                <% @error_stats[:common_errors].each do |error_msg, count| %>
                  <tr>
                    <td class="font-mono text-sm max-w-md truncate">
                      <%= error_msg %>
                    </td>
                    <td>
                      <div class="badge badge-error badge-sm"><%= count %></div>
                    </td>
                    <td>
                      <div class="flex items-center gap-2">
                        <span class="text-sm"><%= (count.to_f / total_errors * 100).round(1) %>%</span>
                        <div class="w-16 bg-base-200 rounded-full h-2">
                          <div class="bg-error h-2 rounded-full" 
                               style="width: <%= (count.to_f / @error_stats[:common_errors].values.max * 100).round(1) %>%">
                          </div>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>