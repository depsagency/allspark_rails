<div class="bg-base-100/90 text-base-content sticky top-0 z-30 flex h-16 w-full [transform:translate3d(0,0,0)] justify-center backdrop-blur transition-shadow duration-100 print:hidden shadow-xs">
  <div class="navbar w-full">
    <div class="flex-none lg:hidden">
      <label for="my-drawer" class="btn btn-square btn-ghost drawer-button">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-6 h-6 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </label>
    </div>
    <div class="flex-none px-2 mx-2">
      <span class="text-lg font-bold">
        <a href="/" aria-current="page" aria-label="Homepage" class="flex-0 btn btn-ghost px-2">
          <%= image_tag "logo.png", alt: "AllSpark", class: "w-8 h-8" %>
          <div class="font-title inline-flex text-lg md:text-2xl">
            <span class="font-bold">AllSpark</span>
          </div>
        </a>
      </span>
    </div>
    <div class="flex justify-center flex-1 px-2 mx-2">
      <div class="items-stretch hidden lg:flex">
        <% if user_signed_in? %>
          <%= link_to "Home", root_path, class: "btn btn-ghost btn-sm rounded-btn" %>
          
          <% if current_user.admin? %>
            <%= link_to "App Builder", app_projects_path, class: "btn btn-ghost btn-sm rounded-btn" %>
            <%= link_to "AI Assistants", agents_assistants_path, class: "btn btn-ghost btn-sm rounded-btn" %>
            <%= link_to "Teams", agents_teams_path, class: "btn btn-ghost btn-sm rounded-btn" %>
            <%= link_to "MCP Configurations", admin_mcp_configurations_path, class: "btn btn-ghost btn-sm rounded-btn" %>
            <%= link_to "Knowledge Base", agents_knowledge_documents_path, class: "btn btn-ghost btn-sm rounded-btn" %>
          <% end %>
        <% else %>
          <a href="/" class="btn btn-ghost btn-sm rounded-btn"> Home </a>
        <% end %>
      </div>
    </div>
    <div class="flex-none gap-2 hidden lg:flex">
      <% if user_signed_in? %>
        <div class="dropdown dropdown-end">
          <label tabindex="0" class="btn btn-ghost btn-circle avatar">
            <div class="w-10 rounded-full">
              <% if current_user.avatar.attached? %>
                <%= image_tag current_user.avatar, alt: current_user.display_name, class: "w-10 h-10 rounded-full object-cover" %>
              <% else %>
                <div class="bg-primary text-primary-content flex items-center justify-center w-10 h-10 rounded-full text-sm font-bold">
                  <%= current_user.initials %>
                </div>
              <% end %>
            </div>
          </label>
          <ul tabindex="0" class="mt-3 z-[1] p-2 shadow menu menu-sm dropdown-content bg-base-100 rounded-box w-52">
            <li>
              <%= link_to "Profile", user_path(current_user) %>
            </li>
            <% if current_user.admin? %>
              <li>
                <%= link_to "Users", users_path %>
              </li>
              <li>
                <%= link_to "Chat", chat_path %>
              </li>
              <li>
                <%= link_to "Monitoring", agents_monitoring_index_path %>
              </li>
              <li>
                <%= link_to "Impersonation", admin_impersonation_index_path %>
              </li>
            <% end %>
            <li class="border-t border-base-300 mt-2 pt-2">
              <%= button_to "Log out", destroy_user_session_path, method: :delete, data: { turbo: false } %>
            </li>
          </ul>
        </div>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class:"btn btn-ghost btn-sm rounded-btn", data: { turbo: false } %>
      <% end %>
    </div>
  </div>
</div>
