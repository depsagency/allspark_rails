<% content_for :title, "Edit #{@app_project.name}" %>

<div class="container mx-auto px-4 py-8 max-w-2xl">
  <div class="mb-8">
    <div class="breadcrumbs text-sm mb-4">
      <ul>
        <li><%= link_to "App Builder", app_projects_path %></li>
        <li><%= link_to @app_project.name, app_project_path(@app_project) %></li>
        <li>Edit</li>
      </ul>
    </div>
    
    <h1 class="text-4xl font-bold mb-2">Edit Project</h1>
    <p class="text-gray-600">Update your project details. Use the wizard for questionnaire responses.</p>
  </div>

  <%= form_with(model: @app_project, local: true) do |form| %>
    <%= render Ui::CardComponent.new(shadow: true) do |card| %>
      <%= card.with_body do %>
        <% if @app_project.errors.any? %>
          <div class="alert alert-error mb-6">
            <div>
              <h3 class="font-bold">Please fix the following errors:</h3>
              <ul class="list-disc list-inside mt-2">
                <% @app_project.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <div class="form-control mb-6">
          <%= form.label :name, class: "label" do %>
            <span class="label-text font-medium text-lg">Project Name</span>
          <% end %>
          <%= form.text_field :name, 
                             class: "input input-bordered input-lg w-full",
                             required: true %>
          <div class="label">
            <span class="label-text-alt">Changing the name will update the project URL</span>
          </div>
        </div>

        <div class="form-control mb-6">
          <%= form.label :status, class: "label" do %>
            <span class="label-text font-medium text-lg">Project Status</span>
          <% end %>
          <%= form.select :status, 
                         options_for_select([
                           ['Draft', 'draft'],
                           ['Generating', 'generating'],
                           ['Completed', 'completed'],
                           ['Error', 'error']
                         ], @app_project.status),
                         {},
                         { class: "select select-bordered select-lg w-full" } %>
          <div class="label">
            <span class="label-text-alt">Manually set the project status</span>
          </div>
        </div>

        <!-- Project Status Info -->
        <div class="stats shadow mb-6 w-full">
          <div class="stat">
            <div class="stat-title">Status</div>
            <div class="stat-value text-sm">
              <%= render Ui::BadgeComponent.new(variant: @app_project.status.to_sym) do %>
                <%= @app_project.status.humanize %>
              <% end %>
            </div>
          </div>
          
          <div class="stat">
            <div class="stat-title">Completion</div>
            <div class="stat-value text-primary"><%= @app_project.completion_percentage %>%</div>
          </div>
          
          <div class="stat">
            <div class="stat-title">Responses</div>
            <div class="stat-value text-sm"><%= @app_project.completed_responses.count %>/10</div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="flex justify-between w-full mt-6">
          <%= link_to app_project_path(@app_project), class: "btn btn-outline" do %>
            Cancel
          <% end %>
          
          <div class="flex gap-2">
            <%= link_to wizard_app_projects_path(project_slug: @app_project.slug), class: "btn btn-secondary" do %>
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
              </svg>
              Open Wizard
            <% end %>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </div>
        </div>
      <% end %>

    <% end %>
  <% end %>



  <!-- Danger Zone -->
  <div class="mt-8">
    <%= render Ui::CardComponent.new(bordered: true) do |card| %>
      <%= card.with_body do %>
        <h3 class="font-semibold text-lg mb-4 text-error">Danger Zone</h3>
        
        <div class="border border-error rounded-lg p-6">
          <h4 class="font-medium mb-2">Delete this project</h4>
          <p class="text-sm text-gray-600 mb-4">
            Once you delete a project, there is no going back. All generated content, responses, and files will be permanently removed.
          </p>
          
          <%= button_to app_project_path(@app_project), 
                        method: :delete,
                        form: { 
                          data: { 
                            turbo_confirm: "Are you sure you want to delete \"#{@app_project.name}\"?\n\nThis will permanently delete:\n• All questionnaire responses\n• Generated PRD and documentation\n• AI outputs and files\n\nThis action cannot be undone." 
                          } 
                        },
                        class: "btn btn-error btn-outline btn-sm" do %>
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-4 h-4 mr-2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M14.74 9l-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 01-2.244 2.077H8.084a2.25 2.25 0 01-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 00-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 013.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 00-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 00-7.5 0" />
            </svg>
            Delete this project
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>