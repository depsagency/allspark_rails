{
  "name": "todoist",
  "description": "Interact with Todoist task management",
  "parameters": {
    "type": "object",
    "properties": {
      "action": {
        "type": "string",
        "enum": ["list_tasks", "create_task", "update_task", "complete_task", "list_projects"],
        "description": "The action to perform"
      },
      "content": {
        "type": "string",
        "description": "Task content (for create_task)"
      },
      "description": {
        "type": "string",
        "description": "Task description (optional)"
      },
      "task_id": {
        "type": "string",
        "description": "Task ID (for update/complete)"
      },
      "project_id": {
        "type": "string",
        "description": "Project ID (optional)"
      },
      "filter": {
        "type": "string",
        "description": "Filter string for listing tasks (e.g., 'today', 'overdue')"
      },
      "due_date": {
        "type": "string",
        "description": "Due date in YYYY-MM-DD format"
      },
      "priority": {
        "type": "integer",
        "minimum": 1,
        "maximum": 4,
        "description": "Priority level (1-4, where 4 is highest)"
      },
      "labels": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "description": "Array of label names"
      }
    },
    "required": ["action"]
  }
}