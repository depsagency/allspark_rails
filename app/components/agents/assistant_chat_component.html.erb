<div class="assistant-chat-container flex flex-col" 
     data-controller="assistant-chat"
     data-assistant-chat-assistant-id-value="<%= assistant.id %>"
     data-assistant-chat-user-id-value="<%= current_user.id %>"
     style="height: <%= @height %>;">
  
  <!-- Header -->
  <div class="bg-base-200 p-4 border-b border-base-300 flex-shrink-0">
    <div class="flex justify-between items-center">
      <div>
        <h3 class="text-lg font-semibold"><%= assistant.name %></h3>
      </div>
      
      <% if tools_enabled? %>
        <div class="flex gap-2">
          <% tool_badges.each do |tool| %>
            <div class="badge badge-<%= tool[:color] %> gap-1">
              <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <% case tool[:icon] %>
                <% when 'calculator' %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                <% when 'code' %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                <% when 'search' %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                <% when 'chat-bubble-left-right' %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                <% when 'terminal' %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3M5 20h14a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                <% else %>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 4a2 2 0 114 0v1a1 1 0 001 1h3a1 1 0 011 1v3a1 1 0 01-1 1h-1a2 2 0 100 4h1a1 1 0 011 1v3a1 1 0 01-1 1h-3a1 1 0 01-1-1v-1a2 2 0 10-4 0v1a1 1 0 01-1 1H7a1 1 0 01-1-1v-3a1 1 0 00-1-1H4a2 2 0 110-4h1a1 1 0 001-1V7a1 1 0 011-1h3a1 1 0 001-1V4z" />
                <% end %>
              </svg>
              <%= tool[:label] %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  
  <!-- Messages -->
  <div class="flex-1 overflow-y-auto p-4 space-y-4 min-h-0" data-assistant-chat-target="messages">
    <% messages.each do |message| %>
      <%= render Agents::AssistantMessageComponent.new(
        message: message,
        current_user: current_user
      ) %>
    <% end %>
    
    <!-- Typing indicator (hidden by default) -->
    <div class="chat chat-start hidden" data-assistant-chat-target="typingIndicator">
      <div class="chat-bubble">
        <span class="loading loading-dots loading-sm"></span>
      </div>
    </div>
  </div>
  
  <!-- Input -->
  <div class="border-t border-base-300 p-4 flex-shrink-0">
    <form data-action="submit->assistant-chat#sendMessage" data-turbo="false" class="flex gap-2">
      <input type="text" 
             placeholder="Type a message..." 
             class="input input-bordered flex-1"
             data-assistant-chat-target="input"
             data-action="keydown->assistant-chat#handleKeydown" />
      <button type="submit" class="btn btn-primary" data-assistant-chat-target="sendButton">
        Send
      </button>
    </form>
    
    <div class="text-xs text-base-content/50 mt-2">
      Press Enter to send, Shift+Enter for new line
    </div>
  </div>
</div>