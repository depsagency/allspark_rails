<div class="chat-thread flex flex-col max-h-96" 
     data-controller="chat" 
     data-chat-thread-id-value="<%= thread_id %>"
     data-chat-user-id-value="<%= current_user_id %>"
     data-chat-user-name-value="<%= @user.display_name %>">
  
  <!-- Thread Header -->
  <div class="chat-header p-4 border-b bg-base-100">
    <div class="flex items-center justify-between">
      <div>
        <h3 class="text-lg font-semibold"><%= @thread.name %></h3>
        <p class="text-sm text-base-content/70">
          <% if participant_list.present? %>
            with <%= participant_list %>
          <% end %>
        </p>
      </div>
      <div class="flex gap-2">
        <button class="btn btn-ghost btn-sm btn-circle" data-action="click->chat#toggleInfo">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Messages Container -->
  <div class="chat-messages flex-1 overflow-y-auto p-4" data-chat-target="messagesContainer">
    <% messages.each do |message| %>
      <%= render Chat::MessageComponent.new(message: message, current_user: @user) %>
    <% end %>
  </div>
  
  <!-- Typing Indicators -->
  <div class="chat-typing-indicators px-4 py-2 text-sm text-base-content/50" 
       data-chat-target="typingIndicator"
       style="display: none;">
    <span data-chat-target="typingText"></span>
  </div>
  
  <!-- Message Input -->
  <div class="chat-input border-t p-4">
    <form data-action="submit->chat#sendMessage" class="flex gap-2">
      <input type="text" 
             placeholder="Type a message..." 
             class="input input-bordered flex-1"
             data-chat-target="messageInput"
             data-action="input->chat#handleTyping"
             autocomplete="off">
      <button type="submit" class="btn btn-primary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
        </svg>
      </button>
    </form>
  </div>
</div>