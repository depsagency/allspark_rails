<div class="chat-thread-list">
  <div class="p-4 border-b">
    <h3 class="text-lg font-semibold">Conversations</h3>
  </div>
  
  <div class="overflow-y-auto">
    <% threads.each do |thread| %>
      <div class="<%= thread_classes(thread) %> p-4 hover:bg-base-200 cursor-pointer border-b" 
           data-thread-id="<%= thread.id %>"
           data-action="click->chat#selectThread">
        <div class="flex items-start justify-between">
          <div class="flex-1 min-w-0">
            <h4 class="font-medium truncate"><%= thread.name %></h4>
            <p class="text-sm text-base-content/70 truncate">
              <%= last_message_preview(thread) %>
            </p>
          </div>
          <div class="flex flex-col items-end ml-2">
            <span class="text-xs text-base-content/50"><%= time_ago(thread) %></span>
            <%= unread_badge(thread) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if threads.empty? %>
    <div class="p-8 text-center text-base-content/50">
      <p>No conversations yet</p>
    </div>
  <% end %>
</div>