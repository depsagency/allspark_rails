<div class="chat-container flex bg-base-100" data-controller="chat-container">
  <!-- Thread List Sidebar -->
  <div class="chat-sidebar w-80 border-r flex-shrink-0 <%= 'hidden md:block' if show_thread_list? %>" 
       data-chat-container-target="sidebar">
    <%= render Chat::ThreadListComponent.new(
      user: @user, 
      context: @context, 
      current_thread: current_thread
    ) %>
  </div>
  
  <!-- Main Chat Area -->
  <div class="chat-main flex-1 flex flex-col">
    <% if current_thread %>
      <%= render Chat::ThreadComponent.new(thread: current_thread, user: @user) %>
    <% else %>
      <div class="flex-1 flex items-center justify-center text-base-content/50">
        <div class="text-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-16 h-16 mx-auto mb-4 opacity-50">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12c0 4.556-4.03 8.25-9 8.25a9.764 9.764 0 01-2.555-.337A5.972 5.972 0 015.41 20.97a5.969 5.969 0 01-.474-.065 4.48 4.48 0 00.978-2.025c.09-.457-.133-.901-.467-1.226C3.93 16.178 3 14.189 3 12c0-4.556 4.03-8.25 9-8.25s9 3.694 9 8.25z" />
          </svg>
          <p class="text-lg">Select a conversation to start chatting</p>
          <button class="btn btn-primary mt-4" data-action="click->chat-container#createNewThread">
            Start New Conversation
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>